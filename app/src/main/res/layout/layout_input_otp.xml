<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="24dp">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/text_otp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập mã xác thực"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Nhập mã OTP chia 6 ô -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/otp_digit_1"
            style="@style/OtpDigitStyle" />

        <EditText
            android:id="@+id/otp_digit_2"
            style="@style/OtpDigitStyle" />

        <EditText
            android:id="@+id/otp_digit_3"
            style="@style/OtpDigitStyle" />

        <EditText
            android:id="@+id/otp_digit_4"
            style="@style/OtpDigitStyle" />

        <EditText
            android:id="@+id/otp_digit_5"
            style="@style/OtpDigitStyle" />

        <EditText
            android:id="@+id/otp_digit_6"
            style="@style/OtpDigitStyle" />
    </LinearLayout>

    <!-- Nút xác minh -->
    <Button
        android:id="@+id/button_verify_otp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Xác minh"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@drawable/bg_button_checkout"
        android:backgroundTint="@null" />
</LinearLayout>
