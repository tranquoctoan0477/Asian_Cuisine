<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cart_item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/darker"
        android:padding="8dp">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/image_product"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_logo" />

        <!-- Product Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <!-- Product Name and Delete Button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sushi Cá Hồi"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:textColor="@color/cam"
                    android:ellipsize="end" />

                <ImageButton
                    android:id="@+id/button_remove"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_close"
                    android:contentDescription="Remove" />
            </RelativeLayout>

            <!-- Product Note -->
            <TextView
                android:id="@+id/text_product_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Không gừng, thêm sốt"
                android:textSize="14sp"
                android:textColor="#888888"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:clickable="true"
                android:focusable="true"/>

            <!-- Price and Quantity -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="end|center_vertical">

                <TextView
                    android:id="@+id/text_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120.000₫"
                    android:textSize="20sp"
                    android:textColor="@color/cam"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp" />

                <!-- Quantity Controls -->
                <ImageButton
                    android:id="@+id/button_decrease"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_circle"
                    android:src="@drawable/ic_minus"
                    android:contentDescription="Decrease" />

                <TextView
                    android:id="@+id/text_quantity"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/button_increase"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_circle"
                    android:src="@drawable/ic_plus"
                    android:contentDescription="Increase" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
