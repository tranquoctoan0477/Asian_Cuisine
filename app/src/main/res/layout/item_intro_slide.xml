<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Khung nội dung slider nằm ở dưới -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:background="@drawable/bg_gradient_overlay">

        <!-- Logo hoặc biểu tượng -->
        <ImageView
            android:id="@+id/imageSlideIcon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            android:layout_marginBottom="32dp"
            android:contentDescription="Biểu tượng Slide" />

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/textSlideTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chào mừng đến Sushi Restaurant!"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="18dp" />

        <!-- Mô tả -->
        <TextView
            android:id="@+id/textSlideDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trải nghiệm ẩm thực Nhật Bản tinh tế với những món sushi ngon nhất."
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center" />

    </LinearLayout>
</FrameLayout>
