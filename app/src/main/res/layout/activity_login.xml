<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg01">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/img_logo"
            android:contentDescription="Logo Sushi" />

        <!-- Username + Icon vân tay -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Email"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:background="@drawable/edittext_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:inputType="text"
                android:elevation="10dp" />

            <ImageView
                android:id="@+id/iconFingerprint"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/fingerprint"
                android:contentDescription="Vân tay" />
        </LinearLayout>

        <!-- Password + Icon khuôn mặt -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:background="@drawable/edittext_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888" />

            <ImageView
                android:id="@+id/iconFace"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/face_id"
                android:contentDescription="Khuôn mặt" />
        </LinearLayout>

        <!-- Quên mật khẩu -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu?"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:gravity="end"
            android:layout_marginBottom="24dp" />

        <!-- Nút Đăng nhập -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Đăng nhập"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/bg_button_checkout"
            android:layout_marginBottom="24dp" />

        <!-- Chuyển sang đăng ký -->
        <TextView
            android:id="@+id/textGoToRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn chưa có tài khoản? Đăng ký"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />
    </LinearLayout>
</ScrollView>
